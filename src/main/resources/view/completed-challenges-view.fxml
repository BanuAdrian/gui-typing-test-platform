<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="15"
      alignment="TOP_CENTER"
      prefWidth="600" prefHeight="400"
      style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 4);">

   <Text fx:id="challengeLabel"
         text="Select a completed challenge"
         style="-fx-fill: #2C3E50; -fx-font-weight: bold; -fx-font-size: 20px;"
         wrappingWidth="600"
         textAlignment="CENTER">
   </Text>

   <ListView fx:id="challengesListView"
             prefWidth="560"
             prefHeight="320"
             style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-font-size: 18px" />
</VBox>
