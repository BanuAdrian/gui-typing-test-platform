<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.LoginDialogController"
      spacing="15" alignment="CENTER" style="-fx-background-color: #FFFFFF; -fx-padding: 20px; -fx-border-radius: 10px;"
      prefWidth="300" prefHeight="200">

    <Label text="Enter your username:" style="-fx-font-size: 18px;" />
    <TextField fx:id="usernameField" promptText="Username" prefWidth="200" />
    <Button text="Confirm" fx:id="confirmButton" prefWidth="100" style="-fx-background-color: #FFD700" />
</VBox>