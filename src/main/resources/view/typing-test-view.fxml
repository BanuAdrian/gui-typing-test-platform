<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="CENTER" layoutY="14.0" prefHeight="18.0" prefWidth="600.0" text="Type the following text: ">
         <font>
            <Font size="25.0" />
         </font>
      </Label>

      <TextField fx:id="textField" layoutY="289.0" prefHeight="80.0" prefWidth="600.0" promptText="Type the above text">
         <font>
            <Font size="20.0" />
         </font>
      </TextField>

      <TextFlow fx:id="textContainer" layoutY="105.0" prefWidth="600.0" style="-fx-font-size: 20px;"/>
   </children>
</AnchorPane>
