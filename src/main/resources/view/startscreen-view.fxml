<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.StartScreenController"
      spacing="25"
      alignment="CENTER"
      prefWidth="500"
      prefHeight="400"
      style="-fx-background-color: linear-gradient(to bottom, #4A90E2, #136EBE);">

    <ImageView fx:id="logo" fitWidth="100" fitHeight="100" />

    <Label fx:id="titleLabel" text="Typing Test Platform"
           style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: white;
                  -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" />

    <Button fx:id="loginButton" text="Log In" prefWidth="150"
            style="-fx-background-color: #FFD700; -fx-text-fill: black;
                   -fx-font-size: 16px; -fx-font-weight: bold;
                   -fx-background-radius: 8px; -fx-cursor: hand;
                   -fx-effect: dropshadow(gaussian, black, 3, 0.5, 0, 0);" />
</VBox>
